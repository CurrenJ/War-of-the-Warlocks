package Entities;

import javax.swing.JPanel;

public class GoldBitEntity extends FadingBitEntity{
	int fadeStart;
	public final int LIFE_SPAN = 2000;
	
	public GoldBitEntity(int x, int y, JPanel panel){
		super(x, y, 2, 2, "goldBit", panel);
		
		fadeStart = (int) (Math.random() * LIFE_SPAN);
	}
	
	@Override
	public int getAge(){
		int age = (int) (System.currentTimeMillis() - startTime);
		
		float temp = (LIFE_SPAN - age) / ((float) fadeStart);
		if(temp <= 1)
			opacity = temp;

		return age;
	}
}
